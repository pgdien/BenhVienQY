    ViewBag.Title = "Danh sách bác sĩ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ourteam" id="ourteam" ng-controller="bacSiController">
    <div class="container">
        <h6>Đội Ngũ Bác Sĩ</h6>
        <ul class="ch-grid">

            <li dir-paginate="(index, value) in bacSis | itemsPerPage:12">
                <a href="/bac-si/{{value.id}}" class="lightbox"></a><div class="ch-item " style="background-image: url(&quot;{{value.anh}}&quot;);">
