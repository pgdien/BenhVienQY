@model CMS.Models.Category
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="categoryPostController">
    <input type="hidden" value="@Model.idCategory" id="idCategory" />
    <span us-spinner="{radius:15, width:4, length: 8}"></span>
    @if (Model.idCategory == 2)
    {
        <div class="insurance" id="tin-tuc" style="padding-bottom:0;">
            <div class="container">
                <h6>DỊCH VỤ</h6>
                <p ng-hide="posts.length > 0" style="text-align:center; font-size:2em; color:#f44336">Đang cập nhật</p>
                <div class="row" ng-show="posts.length > 0">
                    <div class="col-md-3 col-sm-4 col-xs-6 col-min-12" dir-paginate="(index, value) in posts | itemsPerPage:8" style="margin-bottom:2em;">
                        <div class="services-left itemDV">
                            <a href="/bai-viet/{{value.alias}}-{{value.idPost}}">
                                <img ng-src="{{value.image}}" alt="{{value.title}}" class="imageDV">
                            </a>

                            <h3><a href="/bai-viet/{{value.alias}}-{{value.idPost}}" class="titleMod">{{value.title}}</a></h3>
                            <p>{{value.description | limitTo:100}}</p>
                            <a href="/bai-viet/{{value.alias}}-{{value.idPost}}" class="hvr-shutter-in-horizontal btn_xemchitiet">Xem ngay</a>
                        </div>
                    </div>
                    <dir-pagination-controls></dir-pagination-controls>
                </div>
            </div>
