@model CMS.Models.Image

@{
    ViewBag.Title = Model.title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="insurance" id="tin-tuc" ng-controller="ImageController">
    <input type="hidden" value="@Model.id" id="idImage" />
    <span us-spinner="{radius:15, width:4, length: 8}"></span>
    <div class="container">
        <h6>{{image.title}}</h6>
        <div class="row" style="margin:2em">
            <div class="col-md-12" ng-bind-html="image.content"></div>
        </div>
        <hr />
        <h6>Bộ sưu tập khác</h6>
        <p ng-hide="relatedImages.length > 0" style="text-align:center; font-size:2em; color:#f44336">Đang cập nhật</p>
        <div class="row" ng-show="relatedImages.length > 0">
            <div class="col-md-3 col-sm-4 col-xs-6 col-min-12" dir-paginate="(index, value) in relatedImages | itemsPerPage:4" style="margin-bottom:2em;">
                <div class="services-left itemDV" style="border:1px solid #e0e0e0; background-color:#fff; height: inherit;">
                    <a href="/bo-suu-tap/{{value.alias}}-{{value.id}}">
                        <img ng-src="{{value.anh}}" alt="{{value.title}}" class="imageDV">
                    </a>
                    @*<a href="/bai-viet/{{value.alias}}-{{value.idPost}}" class="hvr-shutter-in-horizontal btn_xemchitiet">Xem ngay</a>*@
                </div>
            </div>
        </div>
    </div>
