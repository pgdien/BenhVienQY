@model CMS.Models.Post
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="insurance" id="tin-tuc" ng-controller="postController">
    <input type="hidden" value="@Model.idPost" id="idPost" />
    <span us-spinner="{radius:15, width:4, length: 8}"></span>
    <div class="container">
        <h6>{{post.title}}</h6>
        @if (Model.idPost == 1)
        {
            <div class="row" style="margin:2em">
                <div class="col-md-12" ng-bind-html="post.content"></div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-md-12" ng-bind-html="post.content"></div>
            </div>
        }
        @if (Model.idPost != 1)
        {
            <hr />
            <h6>Bài viết tương tự</h6>
            <p ng-hide="relatedPosts.length > 0" style="text-align:center; font-size:2em; color:#f44336">Đang cập nhật</p>
            <div class="row" ng-show="relatedPosts.length > 0">
                <div class="col-md-3 col-sm-4 col-xs-6 col-min-12" dir-paginate="(index, value) in relatedPosts | itemsPerPage:4" style="margin-bottom:2em;">
                    <div class="services-left itemDV" style="border:1px solid #e0e0e0; background-color:#fff; height:28em;">
                        <a href="/bai-viet/{{value.alias}}-{{value.idPost}}">
                            <img ng-src="{{value.image}}" alt="{{value.title}}" class="imageDV">
                        </a>

                        <h3><a href="/bai-viet/{{value.alias}}-{{value.idPost}}" class="titleMod">{{value.title}}</a></h3>
                        <p>{{value.description | limitTo:100}}</p>
                        <a href="/bai-viet/{{value.alias}}-{{value.idPost}}" class="hvr-shutter-in-horizontal btn_xemchitiet">Xem ngay</a>
                    </div>
                </div>
            </div>
        }
    </div>
